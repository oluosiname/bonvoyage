<div class="nested-fields passengers">
  <div class="row div-pad">
    <div class="col-sm-5 ">
      <%= f.text_field :name, class: "form-control",  placeholder: "Name" %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :phone, class: "form-control",  placeholder: "Phone" %>
    </div>
    <div class="col-sm-2">
      <%= f.select(:cabin, ["Economy", "Business", "First"], {}, { :class => 'my-select' }) %>
    </div>
    <div class="col-sm-1">
    <%= link_to_remove_association f do %>
    <%= button_tag(type: "button", class: "btn btn-danger") do %>
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> <% end %>
    <% end %>
    </div>
  </div>
</div>
